<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<data>
    <variable
        name="viewmodel"
        type="ViewModel.MainViewModel"/>
    <variable
        name="joystickVM"
        type="ViewModel.JoystickViewModel"/>
    <variable
        name="model"
        type="model.Model"/>
</data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <EditText
            android:id="@+id/editText"
            android:layout_width="314dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:hint="@string/hist_port"
            android:text="@={viewmodel.editTextContentPort}"
            app:layout_constraintTop_toTopOf="@+id/editText2"
            app:layout_constraintWidth_percent="0.8"
            tools:ignore="MissingConstraints,TextFields"
            tools:layout_editor_absoluteX="39dp" />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="314dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="144dp"
            android:hint="@string/hist_IP"
            android:text="@={viewmodel.editTextContentIP}"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintWidth_percent="0.8"
            tools:ignore="MissingConstraints,TextFields"
            tools:layout_editor_absoluteX="39dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="8dp"
            android:text="@{viewmodel.editTextContentIP}"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.612"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints"
            tools:text="Content of EditText ip" />

        <SeekBar
            android:id="@+id/rudderSeek"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="372dp"
            android:max="1000"
            android:min="-1000"
            app:layout_constraintTop_toBottomOf="@+id/editText"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="26dp" />

        <SeekBar
            android:id="@+id/throttleSeek"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="532dp"
            android:max="1000"
            android:min="-1000"
            android:rotation="270"
            android:visibility="visible"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="-151dp"
            tools:visibility="visible" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.519">

            <com.jackandphantom.joystickview.JoyStickView
                android:id="@+id/joy"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentBottom="true"
                app:innerCircleColor="#FF6544"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.93"
                app:outerCircleBorderColor="#DDD3FF"
                app:outerCircleBorderWidth="5"
                app:outerCircleColor="#DDD3FF"
                app:shadowColor="#000"
                app:shadowRadius="7" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/connect"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="130dp"
            tools:layout_editor_absoluteY="339dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>